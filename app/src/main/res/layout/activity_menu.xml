<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fast_.elvozarron.activity.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listaDeEntrenadores"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        android:text="LISTA DE ENTRENADORES"
        android:background="@color/colorPrimary"
        android:onClick="pasarAventanaEntrenador"
        />

    <Button
        android:text="LISTA DE PARTICIPANTES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listaDeEntrenadores"
        android:layout_alignParentStart="true"
        android:id="@+id/listaDeParticipantes"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary" />

    <Button
        android:text="DAR TU VOTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/darTuVoto"
        android:layout_below="@+id/listaDeParticipantes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_below="@+id/darTuVoto"
        android:layout_marginTop="148dp"
        android:id="@+id/logo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
